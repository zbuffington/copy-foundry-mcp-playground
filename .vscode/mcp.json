{
    "servers": {
        "MCP Server for Azure AI Foundry": {
            "command": "uvx",
            "args": [
                "--prerelease=allow",
                "--no-cache",
                "--from",
                "git+https://github.com/azure-ai-foundry/mcp-foundry.git@msbuild2025",
                "run-azure-ai-foundry-mcp",
                "--envFile",
                "${workspaceFolder}/.env"
            ]
        }
    }
}
